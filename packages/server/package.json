{
  "name": "@umbral-nexus/server",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "nodemon --exec tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:load": "artillery run tests/load/game-load.yml",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "dependencies": {
    "@umbral-nexus/shared": "file:../shared",
    "cors": "latest",
    "dotenv": "latest",
    "express": "latest",
    "express-rate-limit": "latest",
    "helmet": "latest",
    "mongoose": "latest",
    "pino": "latest",
    "pino-http": "latest",
    "socket.io": "latest",
    "ws": "latest",
    "zod": "latest"
  },
  "devDependencies": {
    "@types/cors": "latest",
    "@types/express": "latest",
    "@types/jest": "latest",
    "@types/node": "latest",
    "@types/ws": "latest",
    "artillery": "latest",
    "jest": "latest",
    "nodemon": "latest",
    "supertest": "latest",
    "ts-jest": "latest",
    "ts-node": "latest",
    "tsx": "latest"
  }
}